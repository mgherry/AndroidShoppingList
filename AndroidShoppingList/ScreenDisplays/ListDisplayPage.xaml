<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidShoppingList.ScreenDisplays.ListDisplayPage"
             xmlns:controls="clr-namespace:AndroidShoppingList.ScreenDisplays"
             Title="Shopping List">

    <ScrollView>
        <VerticalStackLayout>
            <Label 
                Text="TODO: List Name Binding"
                VerticalOptions="Center" 
                HorizontalOptions="Start"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Name of the displayed list."
                FontSize="24" 
                Margin="10,10,50,10"/>


            <VerticalStackLayout x:Name="ListItemsArray">
                <controls:ListItemDisplay/>
            </VerticalStackLayout>

            <Button
                x:Name="AddNewItemBtn"
                Text="Add New Item"
                SemanticProperties.Hint="Adds a new item to the list"
                Clicked="OnAddNewItemClicked"
                HorizontalOptions="Start"
                Margin="10,10,50,10"
                IsEnabled="True"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>